@{
    ViewBag.Title = "StudentAdd";
    Layout = "~/Views/Shared/_Content.cshtml";
}

<script src="~/Asset/js/Student/StudentAdd.js"></script>

<div>
    <a id="add_student" href="#" class="easyui-linkbutton" data-options="iconCls:'icon-add'" onclick="studentAddView()">添加学生</a>
</div>
<div>
    <table id="student_list" class="easyui-datagrid">
        <thead>
            <tr>
                <th data-options="field:'studentName',width:50">学生姓名</th>
                <th data-options="field:'studentNo',width:50">学生学号</th>
                @*<th data-options="field:'studentSex',width:50">学生性别</th>*@
                <th data-options="field:'studentSession',width:50">届</th>
                <th data-options="field:'studentClass',width:50">班级</th>
                <th data-options="field:'studentProfession',width:50">专业</th>
                <th data-options="field:'Operate',formatter:Operate">操作</th>
            </tr>
        </thead>
    </table>
</div>
<div id="studentAdd" class="easyui-window" title="学生添加" style="width: 600px; height: 400px;text-align:center" data-options="iconCls:'icon-tip',modal:true,closed:true">
    <div>学生姓名：<input type="text" id="student_name" style="border:none;border-bottom: 1px solid;padding-bottom:2px;" /></div>
    <div>学生学号：<input type="text" id="student_no" style="border:none;border-bottom: 1px solid;padding-bottom:2px;" /></div>
    <div>学生性别：</div><input type="radio" name="student_sex" value="1" checked />男 <input type="radio" name="student_sex" value="2" />女
    <div>届：<input type="text" id="student_session" style="border:none;border-bottom: 1px solid;padding-bottom:2px;" /></div>
    <div>班级：<input type="text" id="student_class" style="border:none;border-bottom: 1px solid;padding-bottom:2px;" /></div>
    <div>专业：<input type="text" id="student_profession" style="border:none;border-bottom: 1px solid;padding-bottom:2px;" /></div>
    <div>用户账号<input type="text" id="account" style="border:none;border-bottom: 1px solid;padding-bottom:2px;" /></div>
    <div>用户密码<input type="text" id="password" style="border:none;border-bottom: 1px solid;padding-bottom:2px;" /></div>
    <div>
        用户权限<select id="role">
            <option value="-2">管理员</option>
            <option value="1">实验室资产管理员</option>
            <option value="2">实验室普通管理教师</option>
            <option value="3">普通系内教师</option>
            <option value="4">实验室维护学生</option>
            <option value="5">外系教师</option>
        </select>
    </div>
    <div class="winContent">
        <a id="save_lab" href="#" class="easyui-linkbutton" data-options="iconCls:'icon-save'" onclick="addStudent()">保存</a>
    </div>

</div>

