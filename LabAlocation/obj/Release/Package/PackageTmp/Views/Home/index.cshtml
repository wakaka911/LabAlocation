@{
    Layout = "~/Views/Shared/_Content.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Simple Login Form</title>
    <meta charset="UTF-8" />
    <link rel="stylesheet" type="text/css" href="~/Asset/CSS/reset.css">
    <script src="~/Asset/js/index/index.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Asset/CSS/structure.css">
</head>

<body>
    <form class="box login">
        <fieldset class="boxBody">
            <label>用户名</label>
            <input type="text" tabindex="1" required id="account">
            <label><a href="#" class="rLink" tabindex="5"></a>密码</label>
            <input type="password" tabindex="2" required id="password">
        </fieldset>
        <footer>
            <input type="button" class="btnLogin" value="Login" tabindex="4" onclick="login()">
        </footer>
    </form>

</body>
</html>
