@{
    ViewBag.Title = "TeacherAdd";
    Layout = "~/Views/Shared/_Content.cshtml";
}

<script src="~/Asset/js/Teacher/TeacherAdd.js"></script>

<div>
    <a id="add_teacher" href="#" class="easyui-linkbutton" data-options="iconCls:'icon-add'" onclick="teacherAddView()">添加教师</a>
</div>
<div>
    <table id="teacher_list" class="easyui-datagrid">
        <thead>
            <tr>
                <th data-options="field:'teacherName',width:50">教师姓名</th>
                <th data-options="field:'teacherNo',width:50">教师工号</th>
                @*<th data-options="field:'teacherSex',width:50">教师性别</th>*@
                <th data-options="field:'teacherDep',width:50">教室部门</th>
                <th data-options="field:'Operate',formatter:Operate">操作</th>
            </tr>
        </thead>
    </table>
</div>
<div id="teacherAdd" class="easyui-window" title="教师添加" style="width: 600px; height: 400px;text-align:center" data-options="iconCls:'icon-tip',modal:true,closed:true">
    <div>教师姓名<input type="text" id="teacherName" style="border:none;border-bottom: 1px solid;padding-bottom:2px;" /></div>
    <div>教师工号<input type="text" id="teacherNo" style="border:none;border-bottom: 1px solid;padding-bottom:2px;" /></div>
    <div>教师性别<input type="radio" name="teacherSex" value="1" checked />男 <input type="radio" name="teacherSex" value="2" />女</div>
    <div>教室部门<input type="text" id="teacherDep" style="border:none;border-bottom: 1px solid;padding-bottom:2px;" /></div>
    <div>用户账号<input type="text" id="account" style="border:none;border-bottom: 1px solid;padding-bottom:2px;" /></div>
    <div>用户密码<input type="text" id="password" style="border:none;border-bottom: 1px solid;padding-bottom:2px;" /></div>
    <div>
        用户权限<select id="role">
            <option value="-2">管理员</option>
            <option value="1">实验室资产管理员</option>
            <option value="2">实验室普通管理教师</option>
            <option value="3">普通系内教师</option>
            <option value="4">实验室维护学生</option>
            <option value="5">外系教师</option>
        </select>
    </div>
    <div>
        <a id="save_lab" href="#" class="easyui-linkbutton" data-options="iconCls:'icon-save'" onclick="addTeacher()">保存</a>
    </div>

</div>


